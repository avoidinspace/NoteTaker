<div class='notes-nav'>
  <div class='notes-control'>
    {{#link-to 'notes.new' class='btn'}}{{fa-icon 'plus' size=2}}{{/link-to}}
  </div>
  <ul class='list-group notes-list'>
    {{#each note in notes}}
      <li class='list-group-item'>
        {{#link-to 'notes.show' note class='note-link'}} {{note.title}} {{/link-to}}
      </li>
    {{/each}}
  </ul>
</div>
<div class='note'>
  {{outlet}}
</div>
